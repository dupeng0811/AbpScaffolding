<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SJNScaffolding.RazorPage</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    <link href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/layui/css/layui.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/jqGrid/css/ui.jqgrid.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/font-awesome/css/font-awesome.css")" rel="stylesheet" />
    @await RenderSectionAsync("styles", required: false)
</head>
<body style="background-color: #e6e6e6;">

    <ul class="layui-nav">
        <li class="layui-nav-item"><a href="/">首页</a></li>
        <li class="layui-nav-item"><a href="/TableSettings">表结构设置</a></li>
        <li class="layui-nav-item"><a href="/MenuGenerator">菜单权限生成</a></li>
    </ul>
    <div class="layui-container" style="margin-top: 30px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SJNScaffolding.RazorPage</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    <script src="@Url.Content("~/lib/layui/layui.all.js")"></script>
    <script src="@Url.Content("~/lib/jqGrid/js/jquery.jqGrid.js")"></script>
    <script src="@Url.Content("~/lib/jqGrid/js/jquery.jqGrid.extend.js")"></script>
    <script src="@Url.Content("~/lib/jqGrid/plugins/jquery.tablednd.js")"></script>
    <script src="@Url.Content("~/lib/bootstrap/dist/js/bootstrap.js")"></script>
    <script>
        $('.layui-nav .layui-nav-item').each(function (i, v) {
            if ($(v).text() == '@Html.Raw(ViewData["Title"])') {
            $(v).addClass('layui-this');
        }
    })
    </script>
    @await RenderSectionAsync("scripts", required: false)
</body>
</html>
